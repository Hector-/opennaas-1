<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://maven.apache.org/POM/4.0.0"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<parent>
  <artifactId>itests-bundle-settings</artifactId>
  <groupId>net.i2cat.mantychore</groupId>
  <version>1.0.0-SNAPSHOT</version>	
  </parent>


	<modelVersion>4.0.0</modelVersion>
	<groupId>net.i2cat.mantychore.tests</groupId>
	<artifactId>net.i2cat.mantychore.tests.repository</artifactId>
	<version>1.0.0-SNAPSHOT</version>

	<name>Mantychore :: Tests :: Repository</name>

	<packaging>jar</packaging>


	<dependencies>
		<!-- mantychore dependencies -->
		<dependency>
			<groupId>net.i2cat.mantychore.protocols</groupId>
			<artifactId>net.i2cat.mantychore.protocols.netconf</artifactId>
			<version>1.0.0-SNAPSHOT</version>
		</dependency>

		<dependency>
			<groupId>net.i2cat.mantychore.actionsets</groupId>
			<artifactId>net.i2cat.mantychore.actionsets.junos</artifactId>
			<version>1.0.0-SNAPSHOT</version>
		</dependency>

		<!-- normal dependencies required at compile time -->
		<dependency>
			<groupId>org.ops4j.pax.exam</groupId>
			<artifactId>pax-exam</artifactId>
			<version>1.2.2</version>
		</dependency>
		<dependency>
			<groupId>org.ops4j.pax.exam</groupId>
			<artifactId>pax-exam-junit</artifactId>
			<version>1.2.2</version>
		</dependency>
		<dependency>
			<groupId>org.ops4j.pax.exam</groupId>
			<artifactId>pax-exam-container-default</artifactId>
			<version>1.2.2</version>
		</dependency>
		<!-- IssA Framework dependencies -->
		<dependency>
			<groupId>com.iaasframework.capabilities</groupId>
			<artifactId>com.iaasframework.capabilities.model</artifactId>
		</dependency>
		<dependency>
			<groupId>com.iaasframework.capabilities</groupId>
			<artifactId>com.iaasframework.capabilities.commandset</artifactId>
		</dependency>

		<!-- Apache Felix Karaf integration -->
		<dependency>
			<groupId>org.apache.felix.karaf.tooling</groupId>
			<artifactId>org.apache.felix.karaf.tooling.testing</artifactId>
			<version>1.4.0-fuse-01-00</version>
		</dependency>



	</dependencies>

	<build>
		<plugins>
			<!-- use pax exam maven plugin -->
			<plugin>
				<groupId>org.ops4j.pax.exam</groupId>
				<artifactId>maven-paxexam-plugin</artifactId>
				<executions>
					<execution>
						<id>generate-config</id>
						<goals>
							<goal>generate-config</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<options>
						<platform>${target-framework}</platform>
						<profiles>log,url</profiles>
					</options>
					<settings>
						<dependency_options>org.ops4j.pax.web:pax-web-service@7</dependency_options>
					</settings>
				</configuration>
			</plugin>
		</plugins>
	</build>




</project>