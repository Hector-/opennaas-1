<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://maven.apache.org/POM/4.0.0"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<!--  parent parameters  -->
	<parent>		
		<artifactId>itests-bundle-settings</artifactId>
  		<groupId>net.i2cat.mantychore</groupId>
  		<version>1.0.0-SNAPSHOT</version>
	</parent>


	<!--  POM id -->

	<groupId>net.i2cat.nexus</groupId>
	<artifactId>net.i2cat.nexus.tests.helper</artifactId>
	<version>1.0.0-SNAPSHOT</version>

	<!--  Maven configuration -->
	<modelVersion>4.0.0</modelVersion>
	<name>Nexus :: Integration Test Helper</name>
	<description>Nexus Integration test helper</description>
	<packaging>bundle</packaging>
	


	<build>
	
		<plugins>
			<plugin>
				<groupId>org.ops4j</groupId>
				<artifactId>maven-pax-plugin</artifactId>
				<version>1.4</version>
				<extensions>true</extensions>
			</plugin>
			
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<version>2.0.0</version>

				<configuration>
					<instructions>
						<Bundle-SymbolicName>${pom.artifactId}</Bundle-SymbolicName>
						<Bundle-Version>${pom.version}</Bundle-Version>
						<Import-Package>!net.i2cat.nexus.tests*,
							org.slf4j,
							org.ops4j.pax.exam, 
							org.apache.karaf.testing,
							org.osgi.framework,
						*</Import-Package>
						<Export-Package>
							net.i2cat.nexus.tests;version="${pom.version}",
						</Export-Package>					
					</instructions>
				</configuration>
			</plugin>
		</plugins>
	</build>

</project>