<?xml version="1.0" encoding="UTF-8"?>
<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

	<!-- Maven parent -->
	<parent>
		<groupId>com.iaasframework</groupId>
		<artifactId>base-settings</artifactId>
		<version>1.0.0</version>
	</parent>

	<!-- POM id -->
	<groupId>net.i2cat.mantychore</groupId>
	<artifactId>base-mantychore</artifactId>
	<version>1.0.0-SNAPSHOT</version>

	<!--  Maven configuration -->
	<modelVersion>4.0.0</modelVersion> <!-- pom.xml version -->
	<prerequisites>
		<maven>2.0.9</maven>
	</prerequisites>
	<packaging>pom</packaging>

	<!-- Administrative information -->
	<name>Mantychore</name>
	<url>http://www.mantychore.eu/</url>

	<organization>
		<name>Fundació Privada i2CAT, Internet i Innovació a Catalunya</name>
		<url>http://www.i2cat.net/en</url>
	</organization>

	<!-- Custom Properties -->
	<properties>
		<mantychore.version>1.0.0-SNAPSHOT</mantychore.version>
		<iaas.version>1.0.0</iaas.version>
	</properties>

	<!-- Modules configuration -->
	<!-- mvn build will only recurse on pom.xml inside this folders: -->
	<modules>
		<module>bundles</module>
		<module>tests</module>
	</modules>

	<!-- Build information -->
	<!--
		Enforce Java5 - See:
		http://maven.apache.org/plugins/maven-enforcer-plugin/
	-->
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-enforcer-plugin</artifactId>
				<executions>
					<execution>
						<id>enforce-versions</id>
						<goals>
							<goal>enforce</goal>
						</goals>
						<configuration>
							<rules>
								<requireJavaVersion>
									<version>1.5</version>
								</requireJavaVersion>
								<!--
									<requireOS> <family>unix</family> </requireOS>
									<requireMavenVersion> <version>2.0.6</version>
									</requireMavenVersion>
								-->
							</rules>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

	<!-- SCM configuration -->
	<scm>
		<connection>scm:svn:http://svn.i2cat.com/repos/manticore/</connection>
		<developerConnection>scm:svn:http://svn.i2cat.com/repos/manticore/</developerConnection>
		<url>scm:svn:http://svn.i2cat.com/repos/manticore</url>
	</scm>

	<!-- Reporting configuration -->
	<reporting>
		<plugins>
			<!-- Javadoc -->
			<plugin>
				<artifactId>maven-javadoc-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>jxr-maven-plugin</artifactId>
			</plugin>
			<!-- Unit Test Report -->
			<plugin>
				<artifactId>maven-surefire-plugin</artifactId>
			</plugin>
		</plugins>
	</reporting>

	<dependencies>
		<!-- IaaS Dependencies -->
		<dependency>
			<groupId>com.iaasframework.core</groupId>
			<artifactId>com.iaasframework.core.resourcecore</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>com.iaasframework.core</groupId>
			<artifactId>com.iaasframework.core.persistence</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>com.iaasframework.core</groupId>
			<artifactId>com.iaasframework.core.hibernate</artifactId>
			<scope>provided</scope>
		</dependency>
		
		<!-- database jpa dependency -->
		<dependency>
			<groupId>org.apache.geronimo.specs</groupId>
			<artifactId>geronimo-jpa_1.0_spec</artifactId>
			<scope>provided</scope>
		</dependency>
		
	</dependencies>

	<dependencyManagement>
		<dependencies>
			<!-- IaaS Framework and Tools -->
				<!--  IaaS Core dependencies  -->
			<dependency>
				<groupId>com.iaasframework.core</groupId>
				<artifactId>com.iaasframework.core.resourcecore</artifactId>
				<version>${iaas.version}</version>
			</dependency>
			<dependency>
				<groupId>com.iaasframework.core</groupId>
				<artifactId>com.iaasframework.core.persistence</artifactId>
				<version>${iaas.version}</version>
			</dependency>
			<dependency>
				<groupId>com.iaasframework.core</groupId>
				<artifactId>com.iaasframework.core.hibernate</artifactId>
				<version>${iaas.version}</version>
			</dependency>
			<dependency>
				<groupId>com.iaasframework.core</groupId>
				<artifactId>com.iaasframework.core.transports</artifactId>
				<version>${iaas.version}</version>
			</dependency>
			
				<!--  IaaS tools  -->			
			<dependency>
				<groupId>com.iaasframework.capabilities</groupId>
				<artifactId>com.iaasframework.capabilities.protocol</artifactId>
				<version>${iaas.version}</version>
			</dependency>
			<dependency>
				<groupId>com.iaasframework.capabilities</groupId>
				<artifactId>com.iaasframework.capabilities.commandset</artifactId>
				<version>${iaas.version}</version>
			</dependency>
			<dependency>
				<groupId>com.iaasframework.capabilities</groupId>
				<artifactId>com.iaasframework.capabilities.actionset</artifactId>
				<version>${iaas.version}</version>
			</dependency>
			<dependency>
				<groupId>com.iaasframework.capabilities</groupId>
				<artifactId>com.iaasframework.capabilities.model</artifactId>
				<version>${iaas.version}</version>
			</dependency>
			<dependency>
				<groupId>com.iaasframework.capabilities</groupId>
				<artifactId>com.iaasframework.capabilities.eventset</artifactId>
				<version>${iaas.version}</version>
			</dependency>
			<dependency>
				<groupId>com.iaasframework.capabilities</groupId>
				<artifactId>com.iaasframework.capabilities.triggerset</artifactId>
				<version>${iaas.version}</version>
			</dependency>
				<!--  IaaS tools  -->						
			<dependency>
				<groupId>com.iaasframework.transports</groupId>
				<artifactId>com.iaasframework.transports.sockets</artifactId>
				<version>${iaas.version}</version>
			</dependency>
			<dependency>
				<groupId>com.iaasframework.transports</groupId>
				<artifactId>com.iaasframework.transports.virtual</artifactId>
				<version>${iaas.version}</version>
			</dependency>
		</dependencies>
	</dependencyManagement>

	<repositories>
		<repository>
			<id>releases</id>
			<name>IaaS Repository Group Proxy Releases</name>
			<url>http://repository.inocybe.ca/content/groups/public/</url>
		</repository>
		<repository>
			<id>snapshots</id>
			<name>IaaS Repository Snapshot Proxy Releases</name>
			<url>http://repository.inocybe.ca/content/groups/public-snapshots/</url>
		</repository>
	</repositories>

	<pluginRepositories>
		<pluginRepository>
			<id>ops4j.snapshots</id>
			<url>http://repository.ops4j.org/mvn-snapshots</url>
			<releases>
				<enabled>false</enabled>
			</releases>
		</pluginRepository>
	</pluginRepositories>

	<distributionManagement>
		<site>
			<id>dev.manticore.i2cat.net</id>
			<url>file://var/www/site/</url>
		</site>
	</distributionManagement>

</project>
