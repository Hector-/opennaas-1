<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">
	<bean id="protocolManager" class="net.i2cat.nexus.protocols.sessionmanager.impl.ProtocolManager"/>
	<!-- Listen for registration / deregistration of IProtocolSessionFactory services -->
	<reference-list interface="net.i2cat.nexus.resources.protocol.IProtocolSessionFactory" availability="optional">
		<reference-listener ref="protocolManager" bind-method="sessionFactoryAdded" unbind-method="sessionFactoryRemoved"/>
	</reference-list>
	<!-- Command completers -->
	<bean id="resourceNameCompleter" class="net.i2cat.nexus.protocols.sessionmanager.shell.completers.ResourceNameCompleter"/>
	<!-- Register a ProtocolManager as an OSGi Service -->
	<service ref="protocolManager" interface="net.i2cat.nexus.resources.protocol.IProtocolManager"/>
	<!-- Provide commands to the Karaf shell -->
	<command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.0.0">
		<command name="protocols/info">
			<action class="net.i2cat.nexus.protocols.sessionmanager.shell.InfoCommand"/>
			<completers>
				<ref component-id="resourceNameCompleter"/>
				<null/>
			</completers>
		</command>
		<command name="protocols/list">
			<action class="net.i2cat.nexus.protocols.sessionmanager.shell.ListCommand"/>
			<completers>
				<ref component-id="resourceNameCompleter"/>
				<null/>
			</completers>
		</command>
		<command name="protocols/remove">
			<action class="net.i2cat.nexus.protocols.sessionmanager.shell.RemoveCommand"/>
			<completers>
				<ref component-id="resourceNameCompleter"/>
				<null/>
			</completers>
		</command>
		<command name="protocols/add">
			<action class="net.i2cat.nexus.protocols.sessionmanager.shell.AddCommand"/>
			<completers>
				<ref component-id="resourceNameCompleter"/>
				<null/>
			</completers>
		</command>
		<command name="protocols/purge">
			<action class="net.i2cat.nexus.protocols.sessionmanager.shell.PurgeCommand"/>
			<completers>
				<ref component-id="resourceNameCompleter"/>
				<null/>
			</completers>
		</command>
		<command name="protocols/context">
			<action class="net.i2cat.nexus.protocols.sessionmanager.shell.ContextCommand"/>
			<completers>
				<ref component-id="resourceNameCompleter"/>
				<null/>
			</completers>
		</command>
	</command-bundle>
</blueprint>
