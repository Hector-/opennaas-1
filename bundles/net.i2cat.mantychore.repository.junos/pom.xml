<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<parent>
		<artifactId>mantychore-bundles</artifactId>
		<groupId>net.i2cat.mantychore</groupId>
		<version>1.0.0-SNAPSHOT</version>
	</parent>

  <modelVersion>4.0.0</modelVersion>
  <groupId>net.i2cat.mantychore.repository</groupId>
  <artifactId>net.i2cat.mantychore.repository.junos</artifactId>
  <packaging>bundle</packaging>
  
  <name>Mantychore Repository </name>
  <version>1.0.0-SNAPSHOT</version>
  	<description>Mantychore Repository Implementation</description>

  <dependencies>

<dependency> 
<groupId>com.iaasframework.capabilities</groupId> <artifactId>com.iaasframework.capabilities.actionset</artifactId> <version>1.0.0-SNAPSHOT</version>
</dependency>  
</dependencies>

  <build>
    <resources>
      <resource>
        <directory>src/main/resources</directory>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <groupId>org.ops4j</groupId>
        <artifactId>maven-pax-plugin</artifactId>
        <version>1.4</version>
        <!--
           | enable improved OSGi compilation support for the bundle life-cycle.
           | to switch back to the standard bundle life-cycle, move this setting
           | down to the maven-bundle-plugin section
          -->
        <extensions>true</extensions>
      </plugin>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <version>2.0.0</version>
        <!--
         | the following instructions build a simple set of public/private classes into an OSGi bundle
        -->
        <configuration>
          <instructions>
<Bundle-SymbolicName>${pom.artifactId} </Bundle-SymbolicName> <Bundle-Version>${pom.version}</Bundle-Version> <Import-Package>!${bundle.namespace}.*,
org.slf4j;version="1.5.6", org.hibernate.proxy, javassist.util.proxy, org.hsqldb, com.iaasframework.reosurces.core, com.iaasframework.resources.core.descriptor,
*</Import-Package> <Export-Package>
com.iaasframework.examples.ome6500repository;version="${pom.version}" </Export-Package>
          </instructions>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>