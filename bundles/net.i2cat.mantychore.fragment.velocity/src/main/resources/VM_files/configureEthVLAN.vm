<configuration>
	#set( $logicalRouter = "true" )
	#isLogicalRouter( $param $logicalRouter)
	#if($logicalRouter == "true")
		<logical-systems>
			<name>$param.ElementName</name>
	#end
	<interfaces>	
		<interface>
			<name>$param.Name</name>
				## FIXME logical routers can't contain vlan-tagging tag...
				#if($logicalRouter == "false")	
					<vlan-tagging operation="merge"/>
				#end
				<unit>					
				
					## IT CAN BE DANGEROUS IF WE CAN CHECK THE PARAMS... YOU CAN RESET THE CONFIGURATON FOR ALL THE INTERFACE

					#set( $ethernet = "true" )
					#isEthernet( $param $ethernet)
					#if($ethernet == "true")
						<name>0</name>
					#else
						<name>$param.PortNumber</name>				
						#set( $isvlan = "false" )
						#set( $vlanId = "" )	
						#isVLAN($param $isvlan $vlanId)			
						#if($isvlan == "true")
							<vlan-id operation="merge">$vlanId</vlan-id>
							## <VLAN-TAGGING/> !! WE HAVE TO ADD VLAN-TAGGING
						#end
					#end
					#if($param.description)
					<description>$param.description</description>
					#end										
			</unit>
		</interface>	
	</interfaces>
	#if($logicalRouter == "true")
		</logical-systems>
	#end
</configuration>