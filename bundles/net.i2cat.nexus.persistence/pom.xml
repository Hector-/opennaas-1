<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<parent>
		<artifactId>mantychore-bundles</artifactId>
		<groupId>net.i2cat.mantychore</groupId>
		<version>1.0.0-SNAPSHOT</version>
	</parent>

	<modelVersion>4.0.0</modelVersion>
	<groupId>net.i2cat.nexus</groupId>
	<artifactId>net.i2cat.nexus.persistence</artifactId>
	<packaging>bundle</packaging>
	<name>Nexus :: JPA Persistence</name>
	<version>1.0.0-SNAPSHOT</version>
	<description>Dynamic JPA Persistence tools for Nexus</description>
	<dependencies>
		<dependency>
			<groupId>org.apache.geronimo.specs</groupId>
			<artifactId>geronimo-jpa_1.0_spec</artifactId>
		</dependency>
		<dependency>
			<groupId>org.dynamicjava.osgi</groupId>
			<artifactId>classloading-utils</artifactId>
		</dependency>
		<dependency>
			<groupId>org.dynamicjava.osgi</groupId>
			<artifactId>service-binding-utils</artifactId>
		</dependency>
		<dependency>
			<groupId>org.dynamicjava.osgi</groupId>
			<artifactId>dynamic-jpa</artifactId>
		</dependency>
        	<dependency>
			<groupId>net.i2cat.nexus</groupId>
			<artifactId>net.i2cat.nexus.hibernate</artifactId>
			<version>1.0.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-core</artifactId>
		</dependency>
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-beans</artifactId>
		</dependency>
	</dependencies>
	<build>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
			</resource>
			<!--
				| example additional resource entries, useful when building Eclipse
				RCP applications
			-->
			<resource>
				<directory>.</directory>
				<includes>
					<include>plugin.xml</include>
					<include>plugin.properties</include>
					<include>icons/**</include>
				</includes>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<groupId>org.ops4j</groupId>
				<artifactId>maven-pax-plugin</artifactId>
				<version>1.3</version>
				<!--
					| enable improved OSGi compilation support for the bundle
					life-cycle. | to switch back to the standard bundle life-cycle,
					move this setting | down to the maven-bundle-plugin section
				-->
				<extensions>true</extensions>
			</plugin>
            <plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<version>1.4.2</version>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Bundle-SymbolicName>${pom.artifactId}
						</Bundle-SymbolicName>
						<Bundle-Version>${pom.version}</Bundle-Version>
						<!--
							| assume public classes are in the top package, and private
							classes are under ".internal"
						-->
						<Bundle-Activator>net.i2cat.nexus.persistence.Activator</Bundle-Activator>
						<Import-Package>!${bundle.namespace}.*,org.osgi.framework, javax.persistence, org.dynamicjava.osgi.service_binding_utils, org.dynamicjava.osgi.class
loading_utils, org.w3c.dom, javax.xml.parsers, org.slf4j;version="1.5.6", *</Import-Package>>
						<Export-Package>
						net.i2cat.nexus.persistence.*;version="${pom.version}"
						</Export-Package>
					</instructions>
				</configuration>
			</plugin>
	</plugins>
	</build>
		
</project>
