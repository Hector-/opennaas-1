<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">
	<bean id="junosActionFactory"
		class="net.i2cat.mantychore.actionsets.junos.JunosActionFactory" />

	<!-- Register an Junos action factory as an OSGi Service -->
	<service ref="junosActionFactory"
		interface="com.iaasframework.capabilities.actionset.IActionFactory">
		<service-properties>
			<entry key="actionSet.name" value="junos" />
			<entry key="actionSet.version" value="1.0.0" />
		</service-properties>
	</service>
</blueprint>